<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/mainFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/iv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        style="@style/imageViews"
        android:id="@+id/iv1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/menu_moon1"
    />

    <ImageView
        style="@style/imageViews"
        android:id="@+id/iv2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv3"
        app:layout_constraintLeft_toRightOf="@+id/iv1"
        android:src="@drawable/menu_moon2"

    />

    <ImageView
        style="@style/imageViews"
        android:id="@+id/iv3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv4"
        app:layout_constraintLeft_toRightOf="@+id/iv2"
        android:src="@drawable/menu_moon3"
    />

    <ImageView
        style="@style/imageViews"
        android:id="@+id/iv4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv5"
        app:layout_constraintLeft_toRightOf="@+id/iv3"
        android:src="@drawable/menu_sun1"
    />

    <ImageView
        style="@style/imageViews"
        android:id="@+id/iv5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv4"
        android:src="@drawable/menu_sun2"
    />


</androidx.constraintlayout.widget.ConstraintLayout>