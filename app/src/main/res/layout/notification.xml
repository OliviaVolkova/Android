<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_notific"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@android:color/black"/>
    <TextView
        android:id="@+id/title_notific"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="My notification"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_toEndOf="@id/img_notific"
        />
    <TextView
        android:layout_margin="8dp"
        android:id="@+id/author_notific"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="author"
        android:maxLines="1"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_toEndOf="@id/img_notific"
        android:layout_below="@id/title_notific"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_notific"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        >


    </LinearLayout>



</RelativeLayout>